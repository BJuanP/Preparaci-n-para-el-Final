	begin
        writeln(nombre);
		writeln('Hola');
	end;

    function suma(n1: integer, n2: integer): integer;     //FUNCION
    begin
        suma:= n1+n2
    end;

    function Busqueda(arr: tvector,n: integer): integer;     //FUNCION
    var
        min, i: integer;
    begin
        min:= arr[1];
        for i:= 2 to n do
        begin
            if min > arr[i] then
            begin
                min:= arr[i]
            end;
        end;
        Busqueda:= min;
    end;

begin

    vector[1]:= 5                      //VECTOR
    writeln(vector[1]);

